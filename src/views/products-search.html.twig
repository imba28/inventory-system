{% extends 'base/layout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar pt-3">
                {% if isUserSignedIn %}
              <ul class="nav nav-pills flex-column">
                  <li class="nav-item">
                    <a class="nav-link" href="/products/new">Produkt einpflegen</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link active" href="/products/rent">Produkt verleihen</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/products/return">Produkt zur√ºcknehmen</a>
                  </li>
                  {% endif %}
              </ul>
            </nav>
            <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
              <h1>Produkte
                  {% if app.request.get('q') and totals %}
                  &#187; {{ app.request.get('q') }}" ({{ totals }})
                  {% else %}
                   &#187; Suche
                  {% endif %}
              </h1>
              {% block search_header %}
              {% endblock %}
              <hr />
              {% import 'partials/product-list.html.twig' as product_list %}
              {{ product_list.render(products, paginator, buttons|default([])) }}
            </main>
        </div>
    </div>
{% endblock %}