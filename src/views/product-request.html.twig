<div class="container-fluid">
    <div class="row">
        <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar pt-3">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/products/add">Produkt einpflegen</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/products/rent">Produkt verleihen</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/products/return">Produkt zurücknehmen</a>
                </li>
            </ul>
        </nav>
        <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
            <h1>Produkt &#187;
                {{ product.get('name') }}
                &#187; Leihen</h1>
            <a href="/product/{{ product.getId() }}">Zurück</a>
            <hr>
            <div class="row">
                <form class="ml-4" method='post'>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" name='name' placeholder="Name eingeben" value="{{ request.getParam('name') }}">
                    </div>
                    <div class="form-group">
                        <label for="name">Nachricht</label>
                        <textarea class="textarea" name='message' placeholder="Beschreibe bitte kurz, wofür du das Produkt benötigst">{{ request.getParam('message') }}</textarea>
                    </div>
                    <button type="submit" name="submit" class="btn btn-primary">Leihen beantragen</button>
                </form>
            </div>
        </main>
    </div>
</div>