{% extends 'base/layout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar pt-3">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/inventur">Ãœbersicht</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/inventur/list">Abgeschlossende Inventuren <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </nav>
            <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
                <h1>Inventuren</h1>
                <hr />
                <section class="placeholders inventurMissing">
                    {% for inventur in inventurList %}
                        <article class="bg-light mb-2 p-3 rounded">
                            <div class="media">
                                <div class="media-body">
                                    {% if not inventur.isFinished() %}
                                    <span class="badge badge-info">Aktiv</span>
                                    {% endif %}

                                    <a href="/inventur/{{ inventur.getId() }}" class="d-block">
                                        <h5 class="mt-0 mb-0">Inventur #{{ inventur.getId() }}</h5>
                                    </a>
                                    <h6>von {{ inventur.get('user').get('name') }}</h6>
                                    <div class="text-muted">
                                        am {{ inventur.get('finishDate')|date('d.m.Y') }}
                                    </div>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                </section>
            </main>
        </div>
    </div>
{% endblock %}